---
import { cn } from 'astro-pure/utils'

interface Props {
  class?: string
  sponsors: {
    name: string
    amount: string
    date: string
    platform: string
  }[]
}
const { class: className, sponsors, ...props } = Astro.props
---

<div class={cn('border px-3 sm:px-4 py-2 rounded-xl', className)} {...props}>
  <table class='my-0'>
    <thead>
      <tr>
        <th>昵称</th>
        <th>金额</th>
        <th>平台</th>
        <th>日期</th>
      </tr>
    </thead>
    <tbody>
      {
        sponsors.map((sponsor) => (
          <tr>
            <td>{sponsor.name}</td>
            <td>{sponsor.amount}</td>
            <td>{sponsor.platform}</td>
            <td>{sponsor.date}</td>
          </tr>
        ))
      }
    </tbody>
  </table>
</div>
